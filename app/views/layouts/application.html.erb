          <ul class="nav">
            <li>
              <%= link_to 'Support', '#' %>
            </li>
            <li>
              <%= link_to 'About Us', '#' %>
            </li>
            <li>
              <%= link_to 'Contact Us', '#' %>
            </li>
          </ul>
      </div>
    </div>

  <%= yield %>
  </div>
